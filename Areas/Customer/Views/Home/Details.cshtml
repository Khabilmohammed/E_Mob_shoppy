@model ShoppingCart



<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Product Detail </h2>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <input hidden asp-for="ProductId">
                        <section class="py-5">
                            <div class="container">
                                <div class="row gx-5">
                                    <aside class="col-lg-6">
                                        <div class="mb-3 d-flex justify-content-center " data-imagezoom="true">
                                            <a data-fslightbox="mygalley" class="" target="_blank" data-type="image">
                                                <img style="max-width: 100%; max-height: 100vh; margin: auto;" data-imagezoom="true" class="rounded-4 fit" src="@Model.Product.ImageUrl" />
                                            </a>
                                        </div>
                                        <div class="d-flex justify-content-center mb-3">
                                            <a data-fslightbox="mygalley" class=" img-fluid mx-1 rounded-2" target="_blank" data-type="image" class="item-thumb">
                                                <img width="60" height="60" class="rounded-2" class="img-fluid" src="@Model.Product.ImageUrl" />
                                            </a>
                                            <a data-fslightbox="mygalley" class=" rounded-2 mx-1" target="_blank" data-type="image" class="item-thumb">
                                                <img width="60" height="60" class="rounded-2" src="@Model.Product.ImageUrl" />
                                            </a>
                                            <a data-fslightbox="mygalley" class=" rounded-2 mx-1" target="_blank" data-type="image" class="item-thumb">
                                                <img width="60" height="60" class="rounded-2" src="@Model.Product.ImageUrl" />
                                            </a>
                                            <a data-fslightbox="mygalley" class=" rounded-2 mx-1" target="_blank" data-type="image" class="item-thumb">
                                                <img width="60" height="60" class="rounded-2" src="@Model.Product.ImageUrl" />
                                            </a>

                                        </div>
                                    </aside>
                                    <main class="col-lg-6" style="background-color:white">
                                        <div class="ps-lg-3">
                                            <h4 class="text-dark">
                                                @Model.Product.ProductName <br />
                                                <span class="text-muted">@Model.Product.Category.Name</span>
                                            </h4>
                                            <div class="d-flex flex-row my-3">
                                                <div class="text-warning mb-1 me-2">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fas fa-star-half-alt"></i>
                                                    <span class="ms-1">
                                                        4.5
                                                    </span>
                                                </div>
                                                <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>154 orders</span>
                                                <span class="text-success ms-2">In stock</span>
                                            </div>

                                            <div class="mb-3">
                                                <span class="h5"> @Model.Product.Listprice100.ToString("c")</span>
                                                <span class="text-decoration-line-through">@Model.Product.Price.ToString("c")</span>

                                            </div>

                                            <p>
                                                @Model.Product.ProductDescription
                                            </p>

                                            <div class="row">
                                                <dt class="col-3">Type:</dt>
                                                <dd class="col-9">Mobile</dd>

                                                <dt class="col-3">Color</dt>
                                                <dd class="col-9">Black</dd>

                                                <dt class="col-3">Ram</dt>
                                                <dd class="col-9">8 Gb</dd>

                                                <dt class="col-3">Internal</dt>
                                                <dd class="col-9">128 Gb</dd>
                                            </div>

                                            <hr />

                                            <div class="row mb-4">
                                               
                                                <!-- col.// -->
                                                <div class="col-md-4 col-6 mb-3">
                                                    <label class="mb-2 d-block">Quantity</label>
                                                    <div class="input-group mb-3" style="width: 170px;">

                                                        <input type="number" asp-for="count" class="form-control text-center border border-secondary" value="1" aria-label="Example text with button addon" aria-describedby="button-addon1" />
                                                        <span class="text-danger fw-bolder">@TempData["StockErorr"]</span>
                                                    </div>
                                                </div>
                                            </div>

                                            <button type="submit" class="btn btn-primary shadow-0"> <i class="btn btn-sm me-1 fa fa-shopping-basket"></i> Add to cart </button>
                                            <button type="submit" asp-action="AddToWishlist" asp-controller="Wishlist" asp-route-productId="@Model.ProductId" class="btn btn-warning shadow-0"> <i class="btn btn-sm me-1 fa fa-shopping-basket"></i> Add to Wishlist </button>
                                        </div>
                                    </main>
                                </div>
                            </div>
                        </section>

                    </form>
            </div> <!-- .row // -->
        </div> <!-- card body .// -->
    </div> <!-- card .// -->
</section> <!-- content-main end// -->
