@model Category

<section class="content-main">
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 "> Edit Category </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post"  class="row">
            <input asp-for="Category_Id" hidden />
            <div class=" p-3 mt-2">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12"> 
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                   
                    <input asp-for="Description" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-primary"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3" style="width:150px">Upadte</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border mt-3" style="width:150px">Back to list</a>
            </div>
        </form>

    </div>
</div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}