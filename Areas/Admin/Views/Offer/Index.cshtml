@model List<Offer>

<section class="content-main">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2 "> Offer List </h2>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="row pt-2">
                <partial name="_partialView">

                    <div class="col-12 pb-3 text-end">
                        <a asp-action="" asp-controller="" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add Offer to Product</a>
                    </div>
            </div>

            <table id="tblData" class="table table-bordered table-striped pt-2" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            id
                        </th>
                        <th>
                            Offer Name
                        </th>
                        <th>
                            Offer Type
                        </th>
                        <th>
                            Offer Discount
                        </th>
                        <th>
                            Manupulate
                        </th>
                        
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/js/offer.js"></script>
}