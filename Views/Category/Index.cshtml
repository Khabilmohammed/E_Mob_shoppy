@model List<Category>



<div class="container">
    <div class="row pt-4">
        @if(TempData["success"]!=null){
            <h5 class="text-primary text-opacity-75">@TempData["success"]</h5>
        }
        <div class="col-6 pb-3">
            <h1>Category List</h1>
        </div>
        <div class="col-6 pb-3 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn  btn-primary"><i class="bi bi-plus-circle"></i> Add Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    id
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Descrription
                </th>
                <th>
                    Manupulate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Category_Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="edit" asp-route-id="@obj.Category_Id" asp-controller="Category">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@obj.Category_Id"  asp-controller="Category">
                                <i class="bi bi-x-octagon"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
